

отряд ОкаянныеБасурманы {
    Главный,
    Мелкий,
}


деятель батюшка() {
    пускай переменные басурмане = Списочек::новенький();
    басурмане.добавить(ОкаянныеБасурманы::Главный);
    басурмане.добавить(ОкаянныеБасурманы::Мелкий);
    басурмане.добавить(ОкаянныеБасурманы::Мелкий);

    молвить_много("Кто со мною Русь матушку от басурман защищать?");


    пускай переменная молодцы = 5;
    молвить_много("Подумали молодцы и решили собрать войско из {} молодцев", молодцы);

    молвить_много("{}", ежели молодцы > 3 {
        "Ах, Русь матушка. Победим окаянных."
    } иначе {
        "Горе. горе"
    });

    молвить_много("Вот так и закончилась битва ящеров и русов.");
}
